//Declare a constant variable for the value of Pi and calculate the area of a circle using it.
#include<iostream>
using namespace std;
int main ()
{
	double radius , area ;
	const double pi = 3.141;
	
	cout << "Enter the radius of circle:";
	cin >> radius;
	
	area = radius * pi;
	
    cout << area <<" is the area of circle";
    
    return 0;
 	
}
